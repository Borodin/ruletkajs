.console
    display flex
    flex-direction row
    align-items center
    justify-content flex-end
    position relative
    border-top 1px solid $border-color
    height 72px
    min-height 72px
    max-height 180px
    textarea
        position absolute
        top 0
        left 0
        resize none
        padding 16px
        padding-right 110px
        width 100%
        height 100%
        border none
        display block
        overflow hidden
        outline none
    .resize-line
        left 0
        top -3px
        z-index 1
    .submit-btn
        cursor pointer
        margin-right 20px
        height 42px
        width 42px
        border-radius 21px
        z-index 1
        background $accent-color url(../img/icon_send.svg) no-repeat center
        background-size 50%
    .smile-btn
        height 42px
        width 42px
        background url(../img/icon_smile.svg) no-repeat center
        background-size 60%
        z-index 1
        cursor pointer
