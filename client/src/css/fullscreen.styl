.fullscreen
    .stream-bar
        padding 0
        position absolute
        top 0
        left 0
        width 100vw !important
        height 100vh
        border none
        background #000
        z-index 2
    .resize-line
        display none
    .streams
        height 100%
    .stream
        margin 0
        &:first-child
            display flex
            height 100%
        &:last-child
            background #000
            position absolute
            right 0
            bottom 0
            margin 30px
            width 100%
            max-width 15%
            min-width 300px
    .control-panel
        background #000
        border-radius 5px
        padding 10px
        width 300px
        position absolute
        left 0
        right 0
        margin 30px auto
        bottom 0
        a
            display none
    .option-menu
        top auto
        bottom 100%
        bottom calc(100% - 14px)