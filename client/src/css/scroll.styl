.scroll-box
    overflow hidden
    position relative
    height 100%
    .scroll-content
        position absolute
        width 100%
        height 100%
    .scroll-bar
        display none
        position relative
        overflow hidden
        width 4px
        margin 3px
        height 100%
        height calc(100% - 6px)
        position absolute
        right 0
        top 0
        background rgba(0, 0, 0, .1)
        border-radius 2px
        &.visible
            display block
    .scroll-btn
        position absolute
        border-radius 2px
        width 100%
        height 100px
        background rgba(0, 0, 0, .1)